---
import Header from '../components/Header.astro'
import '../styles/global.css'
export interface Props {
  title?: string
}
const { title = 'Astro Crash Course' } = Astro.props as Props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="reconnect" href="https://fonts.googleapis.com" />
    <link
      rel="stylesheet"
      href="https://fonts.google.com/css2?family=Roboto:wght@300;400;700&display=swap"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
